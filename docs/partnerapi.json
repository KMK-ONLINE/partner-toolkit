        "refresh_token": {
          "type": "string",
          "description": "The BBM refresh token value"
        },
        "scope": {
          "type": "string",
          "description": "A list of space-delimited, case sensitive scopes requested for the token. The scopes returned may be a subset of the scopes requested"
